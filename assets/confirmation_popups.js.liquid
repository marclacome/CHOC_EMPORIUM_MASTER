
function show_basket_confirmation()
{
  hide_all_popups();
  $('#popupBoxConfirmationWrapper').css('display', 'block');
  $('#popup-mask').css('display', 'block');
  $(window).scrollTop(0);
}

function show_pam_confirmation()
{
  hide_all_popups();
  $('#popupBoxConfirmationWrapper').css('display', 'block');
  $('#popup-mask').css('display', 'block');
  $(window).scrollTop(0);
}

function continue_shopping()
{
  hide_all_popups();
}

function continue_shopping_from_pam()
{
  window.location.href = '/collections';
}

function go_cart()
{
  window.location.href = '/cart';
}


function hide_all_popups()
{
  $('#popupBoxGeneralInform').css('display', 'none');
  $('#popupBoxPamNameWrapper').css('display', 'none');
  $('#popupBoxWrapper').css('display', 'none');
  $('#popupBoxMessageWrapper').css('display', 'none');
  $('#popupBoxPamWrapper').css('display', 'none');
  $('#popupBoxPamMessageWrapper').css('display', 'none');
  $('#popupBoxConfirmationWrapper').css('display', 'none');
  $('#popupBoxPamConfirmationWrapper').css('display', 'none');
  $('#popup-mask').css('display', 'none');
}

function show_message(message, click_func)
{
  $('#popupBoxInform_message').html(message);
  $("#popupBoxGeneralInform").css('display', 'block');
  $('#popup-mask').css('display', 'block');
  $('#inform_ok_button').click(click_func);
  $(window).scrollTop(0);
}

function radio_click(id)
{
$('#'+id).prop("checked", true);
}
